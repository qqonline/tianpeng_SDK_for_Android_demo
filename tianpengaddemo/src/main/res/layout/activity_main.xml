<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tvBanner"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#fff"
        android:elevation="5dp"
        android:gravity="center"
        android:text="Banner广告" />

    <TextView
        android:id="@+id/tvInsert"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:elevation="5dp"
        android:gravity="center"
        android:text="插屏广告" />
    <TextView
        android:id="@+id/tvInformation"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:elevation="5dp"
        android:gravity="center"
        android:text="下图上文" />

    <TextView
        android:id="@+id/tvInformationImageOnly"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:elevation="5dp"
        android:gravity="center"
        android:text="纯图信息流" />
    <TextView
        android:id="@+id/tvInformationRightImage"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:elevation="5dp"
        android:gravity="center"
        android:text="右图左文" />
    <TextView
        android:id="@+id/tvInformationLeftImage"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:elevation="5dp"
        android:gravity="center"
        android:text="左图右文" />
    <TextView
        android:id="@+id/tvInformationBottomImage"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:elevation="5dp"
        android:gravity="center"
        android:text="上图下文" />
    <TextView
        android:id="@+id/tvInformationvertric"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:background="#fff"
        android:elevation="5dp"
        android:gravity="center"
        android:text="竖图" />
</LinearLayout>